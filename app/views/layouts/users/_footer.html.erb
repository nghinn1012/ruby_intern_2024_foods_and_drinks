<footer id="footer" class="footer fixed-bottom">
  <div class="container">
    <div class="row gy-3">
      <div class="col-lg-4 col-md-6 d-flex">
        <i class="bi bi-geo-alt icon"></i>
        <div>
          <h4><%= t "users.footer.address.title"  %></h4>
          <p>
            <%= t "users.footer.address.street" %> <br>
            <%= t "users.footer.address.city" %><br>
          </p>
        </div>
      </div>
      <div class="col-lg-4 col-md-6 footer-links d-flex">
        <i class="bi bi-clock icon"></i>
        <div>
          <h4><%= t "users.footer.opening_hours.title" %></h4>
          <p>
            <%= raw t "users.footer.opening_hours.content" %>
          </p>
        </div>
      </div>
      <div class="col-lg-4 col-md-6 footer-links">
        <h4><%= t "users.footer.follow_us.title" %></h4>
        <div class="social-links d-flex">
          <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
          <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
          <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
          <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
        </div>
      </div>
    </div>
  </div>
</footer>
